{
  "name": "hyh-cli",
  "version": "1.0.0",
  "description": "a cli",
  "main": "./lib/index.ts",
  "bin": {
    "hyh": "./lib/index.ts"
  },
  "scripts": {
    "dev": "ts-node .dev.ts",
    "build": "npm run build-tsc && npm run build-extra && ts-node .prod.ts",
    "build-tsc": "tsc",
    "build-extra": "cpx \"lib/**/*.ejs\" cli/bin/ && cpx \"lib/*.{json,js,md}\" cli/",
    "watch-build": "npm run watch-tsc && npm run watch-extra",
    "watch-tsc": "tsc --watch",
    "watch-extra": "cpx \"lib/**/*.{json,ejs}\" cli/bin/ --watch",
    "postinstall": "node -e \"try{require('./postinstall')}catch(e){}\"",
    "publish": "npm login && npm publish ./cli"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.8",
    "inquirer": "^8.0.0",
    "ora": "^5.0.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/inquirer": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/ora": "^3.2.0",
    "cpx2": "^4.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16.17.1"
  }
}